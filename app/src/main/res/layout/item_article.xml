<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/item_photo_layout"
             xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/item_article_mainlayout"
        android:padding="8dp">
        <ImageView
            android:id="@+id/item_article_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_article_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of mega article"
                android:layout_gravity="center"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/item_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title of mega article"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>