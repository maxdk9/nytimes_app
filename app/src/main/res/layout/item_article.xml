<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/item_article_mainlayout"

                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_article_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/item_article_favorite"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_favorite_unchecked"
        app:layout_constraintEnd_toStartOf="@+id/item_article_date"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/item_article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:text="Date of mega article"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/item_article_date"

        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="Title of mega article ?sdklfjslkdjflk dlfkjgdlfkjfsldkf sdlfjsdlkfjsldk sdlkfjsldkfjslkd sdlfkjsdlkf sdlkjfsldkf"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_article_icon"
        app:layout_constraintTop_toBottomOf="@+id/item_article_date"
        app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>
